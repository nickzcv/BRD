<div class="main-content new-ad edit-ad">
  <div class="title">
    <span class="icon ion-clipboard"></span>
    <span class="title-text">Редактировать объявление</span>
  </div>
<div class="page">
  {{#if loading}}
    <div class="loader-wrapper">
      <div class="loader"></div>
    </div>
  {{else if isError}}
    {{errorMessage}}
  {{else}}
    <!--  Add new ad form -->
    <form id="add-ad-form">

      <div class="col-xs-12 col-sm-6 m-t-1 p-l-0">
        <div class="form-group">
          <label class="radio-inline"><input type="radio" name="type" value="buy" {{#compare type '===' 'buy'}}checked{{/compare}}>Куплю</label>
          <label class="radio-inline"><input type="radio" name="type" value="sell" {{#compare type '===' 'sell'}}checked{{/compare}}>Продам</label>
          <div class="typeError"></div>
        </div>
        <div class="form-divider"></div>
        <div class="form-group">
          <label class="radio-inline"><input type="radio" name="object" value="product" {{#compare object '===' 'product'}}checked{{/compare}}>Товар</label>
          <label class="radio-inline"><input type="radio" name="object" value="service" {{#compare object '===' 'service'}}checked{{/compare}}>Услуга</label>
          <div class="objectError"></div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 m-b-1">
        <p class="lbl">Фото:</p>
        <label class="btn ad-photo" id="preview"  style="background: url('img/{{#if photo}}ads/{{photo}}{{else}}image_placeholder.png{{/if}}') 0% 0% / cover">
          <input type="file" name="photo" id="photo" class="hidden photo-input" >
        </label>
        <div class="marker buy {{#compare type '!==' 'buy'}}hidden{{/compare}}">Куплю</div>
        <div class="marker sell {{#compare type '!==' 'sell'}}hidden{{/compare}}">Продам</div>
        <div class="image-error-message hidden"></div>
      </div>
      <div class="form-group">
        <p class="lbl">Раздел</p>
        <select class="form-control" id="category" name="category">
          <option value="">&mdash;</option>
          {{#each categories}}
            <option value="{{id}}" {{#compare ../category.id '===' id}}selected{{/compare}}>{{title}}</option>
          {{/each}}
        </select>
      </div>
      <div class="filters m-b-2"></div>
      <div class="form-group">
        <label for="title">Заголовок</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Заголовок объявления" value="{{title}}">
      </div>
      <div class="form-group">
        <label for="description">Текст объявления</label>
        <textarea class="form-control" rows="3" id="description" name="description" placeholder="Текст объявления">{{description}}</textarea>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="price">Цена</label>
            <input type="text" class="form-control" id="price" placeholder="0 BYR" value="{{price}}">
          </div>
        </div>
        <div class="col-md-6">
          <p class="lbl">Продлить срок размещения на</p>
          <div class="form-group">
            <select class="form-control" id="expirationDate">
              <option value="5">5 дней</option>
              <option value="10">10 дней</option>
              <option value="30">30 дней</option>
            </select>
          </div>
          <span class="exp-date">Истекает: {{formatDate expirationDate 'LLLL'}}</span>
        </div>
      </div>

      <p class="lbl">Местоположение</p>
      <div class="country-picker"></div>

      <div class="form-group row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="contacts">Контактные данные:</label>
            <input type="text" class="form-control" id="contacts" placeholder="Введите название компании" disabled="disabled">
            <span class="add-company">Нет вашей компании? <a>Создать</a></span>
          </div>
          <div class="form-group">
            <div class="radio">
              <label><input type="radio" id="profileRadio" name="getContacts" value="profile" {{#compare contacts.takeFrom '===' 'profile'}}checked{{/compare}}>Использовать контактные телефоны профиля</label>
            </div>
            <div class="radio">
              <label><input type="radio" id="companyRadio" name="getContacts" value="company" {{#compare contacts.takeFrom '===' 'company'}}checked{{/compare}}>Использовать контактные телефоны компании</label>
            </div>
            <div class="radio">
              <label><input type="radio" id="otherRadio" name="getContacts" value="other" {{#compare contacts.takeFrom '===' 'other'}}checked{{/compare}}>Ввести другой контактный телефон</label>
            </div>
            <div class="form-group otherPhoneWrapper">
              <div class="input-group">
                <span class="input-group-addon"><i class="ion-android-call"></i></span>
                <input type="text" class="form-control" id="otherPhone" name="otherPhone" value="{{contacts.phones.[0]}}">
              </div>
              <div class="otherPhoneError"></div>
            </div>
          </div>
        </div>
        <div class="col-md-6">

        </div>
      </div>

      <button type="submit" class="btn btn-default">Сохранить</button>
      <button type="button" class="btn btn-default back">Отмена</button>
    </form>
    <!-- /end form-->

  {{/if}}
</div>
</div>