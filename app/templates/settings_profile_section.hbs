<form>
  <div class="form-group row">
    <div class="col-md-5">
      <div class="photo" style="background-image: url('img/avatar/{{_id}}.png'), url('../img/profile_placeholder.png')"></div>
      <div class="modal-avatar-section"></div>
    </div>
    <div class="col-md-7">
      <div class="form-group ">
        <label for="lastName">Фамилия</label>
        <input type="text" class="form-control" id="lastName" {{#if lastName}}value="{{lastName}}"{{else}} placeholder="Фамилия"{{/if}}>
      </div>
      <div class="form-group ">
        <label for="name">Имя</label>
        <input type="text" class="form-control" id="name" {{#if name}}value="{{name}}"{{else}} placeholder="Имя"{{/if}}>
      </div>
      <div class="form-group ">
        <label for="middleName">Отчество</label>
        <input type="text" class="form-control" id="middleName" {{#if middleName}}value="{{middleName}}"{{else}} placeholder="Отчество"{{/if}}>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="work">Место работы</label>
    <input type="text" class="form-control" id="work" {{#if work}}value="{{work}}"{{/if}}>
  </div>

  <div class="form-group">
    <label for="position">Должность</label>
    <input type="text" class="form-control" id="position" {{#if position}}value="{{position}}"{{/if}}>
  </div>

  <p class="lbl">Ваше местоположение</p>
  <div class="countries-picker"></div>

  <p class="lead">Контактные телефоны</p>
  <p class="lbl2">Будут отображаться в ваших объявлениях</p>

  <div class="form-group short">
    <div class="input-group">
      <span class="input-group-addon"><i class="ion-android-call"></i></span>
      <input type="text" class="form-control" id="phone1" {{#if phone1}}value="{{phone1}}"{{else}} placeholder="+375 00 0000000"{{/if}}>
    </div>
  </div>
  <div class="form-group short">
    <div class="input-group">
      <span class="input-group-addon"><i class="ion-android-call"></i></span>
      <input type="text" class="form-control" id="phone2" {{#if phone2}}value="{{phone2}}"{{else}} placeholder="+375 00 0000000"{{/if}}>
    </div>
  </div>

  <div class="row m-t-2">
    <div class="col-sm-3">
      <button type="submit" class="btn btn-default saveProfile">Сохранить</button>
    </div>
    <div class="col-sm-9">
      <p class="updated">Обновлено - {{formatDate updated_at 'LLLL'}}</p>
    </div>
  </div>

</form>