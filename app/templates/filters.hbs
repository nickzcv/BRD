<div class="row filter-bg" style="background-image: url('img/filter-icons/{{category.id}}.svg')">
  <div class="col-md-6">
{{#each category.filters}}

  {{!-- If Filter has childs --}}
  {{#compare level '===' 'parent'}}

    <p class="lbl" data-label="{{label}}">{{title}}</p>
    {{#each items}}
      <div class="checkbox parent">
        <label><input type="checkbox" id="{{label}}" name="{{label}}" value="{{label}}" {{#if selected}}checked{{/if}}>{{title}}</label>
      </div>
      <div class="child-filters {{#if selected}}{{else}}hidden{{/if}}">
        {{#each items}}
          <div class="checkbox">
            <label><input type="checkbox" id="{{label}}" name="{{label}}" value="{{label}}" {{#if selected}}checked{{/if}}>{{value}}</label>
          </div>
        {{/each}}
      </div>
    {{/each}}

  {{else}}

  {{#if subtitle}}
    <div class="subtitle hidden">
      <h4>{{subtitle}}</h4>
  {{/if}}

  {{!-- Else filter has 1 lvl --}}
    <p class="lbl" data-label="{{label}}">{{title}}</p>
    {{#each items}}
      {{#compare type '===' 'input'}}
        {{#if label}}
          <div class="input-label">{{label}}</div>
        {{/if}}
        <div class="from-to-inline">
          <div class="input-filter m-r-05">
            <label for="{{id}}-from">от</label>
            <input type="number" name="inputFilter" class="form-control" id="{{id}}-from" min="0" {{#if from}}value="{{from}}{{/if}}">
          </div>
          <div class="input-filter">
            <label for="{{id}}-to">до</label>
            <input type="number" name="inputFilter" class="form-control" id="{{id}}-to" min="0" {{#if to}}value="{{to}}{{/if}}">
          </div>
        </div>
      {{else compare type '===' 'input-sizes'}}
        {{#if label}}
          <div class="input-label">{{label}}</div>
        {{/if}}
        {{#each values}}
          <div class="from-to-inline m-b-1">
            <div class="input-filter">
              <input type="number" name="inputFilter" class="form-control" id="t" min="0" data-id="{{@index}}" {{#if t}}value="{{t}}"{{/if}}>
            </div>
            <div class="input-filter">
              <label>&#9747;</label>
              <input type="number" name="inputFilter" class="form-control" id="s" min="0" data-id="{{@index}}" {{#if s}}value="{{s}}"{{/if}}>
            </div>
            <div class="input-filter">
              <label>&#9747;</label>
              <input type="number" name="inputFilter" class="form-control" id="d" min="0" data-id="{{@index}}" {{#if d}}value="{{d}}"{{/if}}>
            </div>
            <button type="button" class="btn ion-minus remove-size" data-id="{{@index}}"></button>
          </div>
        {{/each}}
        <button type="button" class="btn ion-plus add-size"></button>
      {{else}}
        <div class="checkbox">
          <label><input type="checkbox" id="{{label}}" name="{{label}}" value="{{label}}" {{#if selected}}checked{{/if}}>{{value}}</label>
        </div>
      {{/compare}}
    {{/each}}

  {{/compare}}

  {{#if separator}}
    </div>
    <div class="col-md-6">
  {{/if}}

{{/each}}
    {{#if subtitle}}
    </div>
    {{/if}}
  </div>
</div>