<div class="actions">
  <button type="button" class="btn btn-default add-new">Добавить объявление <span class="ion-ios-plus-outline"></span></button>
</div>
<div class="filters-wrapper hidden-xs hidden-sm">
  <a class="close-btn visible-xs visible-sm"><span class="ion-close"></span></a>
  <div class="checkbox">
    <label><input type="checkbox" name="type" value="buy">Куплю</label>
  </div>
  <div class="checkbox">
    <label><input type="checkbox" name="type" value="sell">Продам</label>
  </div>
  <div class="line-breaker"></div>
  <div class="checkbox">
    <label><input type="checkbox" value="">Товар</label>
  </div>
  <div class="checkbox">
    <label><input type="checkbox" value="">Услуга</label>
  </div>
  <div class="line-breaker"></div>
  <div class="form-group">
    <label for="category">Раздел</label>
    <select class="form-control" id="category" name="category">
      <option value="">&mdash;</option>
      {{#each categories}}
        <option value="{{id}}">{{title}}</option>
      {{/each}}
    </select>
  </div>

  <div class="filters"></div>

  <div class="line-breaker"></div>

  <b>Местоположение</b>
  <div class="country-picker"></div>

  <div class="line-breaker"></div>
  <div class="form-group">
    <button type="button" class="btn btn-default disabled">Сбросить фильтр <span class="ion-android-close"></span></button>
  </div>
</div>