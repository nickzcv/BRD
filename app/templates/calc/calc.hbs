<div class="container calc">
  <h2><span class="icon ion-ios-calculator"></span> Калькулятор</h2>

  <div class="tri-down">
    <form>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="form-group">
            <label class="sr-only" for="tolshina">Толщина</label>
            <div class="input-group size-field">
              <div class="input-group-addon">Т</div>
              <input type="number" min="0" class="form-control" id="tolshina" name="tolshina" placeholder="Толщина" value="{{tolshina}}">
              <div class="input-group-addon">мм</div>
            </div>
          </div>
          <div class="form-group">
            <label class="sr-only" for="shirina">Ширина</label>
            <div class="input-group size-field">
              <div class="input-group-addon">Ш</div>
              <input type="number" min="0" class="form-control" id="shirina" name="shirina" placeholder="Ширина" value="{{shirina}}">
              <div class="input-group-addon">мм</div>
            </div>
          </div>
          <div class="form-group size-field">
            <label class="sr-only" for="dlina">Длина</label>
            <div class="input-group">
              <div class="input-group-addon">Д</div>
              <input type="number" min="0" class="form-control" id="dlina" name="dlina" placeholder="Длина" value="{{dlina}}">
              <div class="input-group-addon">мм</div>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-8">
          <!-- {{volume}} -->
          <div class="result-one"><span>V</span> = <span id="volume">{{cutFloat volume 6}}</span> м<sup><small>3</small></sup></div>
          <!-- {{square}} -->
          <div class="result-one"><span>S</span> = <span id="square">{{cutFloat square 3}}</span> м<sup><small>2</small></sup></div>
        </div>
      </div>
      <div class="count-block">
        <div class="form-group count-field">
          <label class="sr-only" for="count">Количество</label>
          <div class="input-group">
            <input type="number" min="0" class="form-control" id="count" name="count" placeholder="Количество" value="{{count}}">
            <div class="input-group-addon">шт</div>
          </div>
        </div>
      </div>
      <!-- {{resultV}} -->
      <div class="result">Общий объем = <span class="result-v">{{cutFloat resultV 6}}</span> м<sup><small>3</small></sup></div>
      <!-- {{resultP}} -->
      <div class="result">Погонная длина = <span class="result-p">{{resultP}}</span> м</div>
    </form>
  </div>
  <!-- Add to table button-->
  <button type="button" class="btn add-to-table" disabled><span class="ion-clipboard"></span> Вставить в таблицу</button>

  {{#if table}}
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th>ТxШxД (мм)</th>
        <th>Кол-во (шт.)</th>
        <th>Погонная длина (м)</th>
        <th>Объем (м<sup><small>3</small></sup>)</th>
        <th class="remove-col"></th>
      </tr>
    </thead>
    <tbody>
    {{#each table}}
      <tr>
        <td>{{tolshina}}<b class="iks">☓</b>{{shirina}}<b class="iks">☓</b>{{dlina}}</td>
        <td>{{count}}</td>
        <td>{{resultP}}</td>
        <td>{{cutFloat resultV 6}}</td>
        <td class="remove-col">
          <a class="remove-row" data-row="{{@index}}"><span class="ion-ios-close-outline"></span></a>
        </td>
      </tr>
    {{/each}}
      <tr class="total">
        <td>Итого:</td>
        <td>{{summColumn table 'count'}}</td>
        <td>{{summColumn table 'resultP'}}</td>
        <td>{{cutFloat (summColumn table 'resultV') 6}}</td>
        <td class="remove-col"></td>
      </tr>
    </tbody>
  </table>
  <div class="actions">
    <!--<button type="button" class="btn btn-success"><span class="ion-help"></span> Узнать цены</button>-->
    <!--<button type="button" class="btn btn-success">Сохранить</button>-->
    <!--<button type="button" class="btn btn-info"><span class="ion-paper-airplane"></span> Отправить на e-mail</button>-->
    <button type="button" class="btn btn-success print"><span class="ion-printer"></span> Печать</button>
    <button type="button" class="btn btn-danger pull-right clear">Удалить таблицу</button>
  </div>
  {{/if}}
</div>
