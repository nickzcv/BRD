<div class="ad-full-view">
  {{#if loading}}
    <div class="loader-wrapper">
      <div class="loader"></div>
    </div>
  {{else if isError}}
    {{errorMessage}}
  {{else}}

    <div class="subheader">
      <div class="photo" style="background-image: url('img/ads/{{photo}}')"></div>
      {{#if photo}}
      {{else}}
        <img class="photo-filter-icon" src="img/filter-icons/{{category.id}}.svg" />
      {{/if}}
      <h2>{{title}}</h2>
    </div>

    <div class="status-details">
      <span class="type {{#compare type '===' 'buy'}}success{{else}}fail{{/compare}}">
        {{#compare type '===' 'buy'}}
          Куплю
        {{else}}
          Продам
        {{/compare}}
      </span>

      <span class="date">
        Добавлено: {{formatDate created_at 'LL'}}
      </span>
    </div>

    <div class="row content">
      <!-- content section -->
      <div class="col-sm-9">
        <nav class="brd-nav-tabs">
          <ul>
            <li>
              <a class="nav-tab-item active" data-state="main">
                Подробнее
              </a>
            </li>
            {{#if isLoggedIn}}
              <li>
                <a class="nav-tab-item" data-state="messages">
                  Сообщения
                </a>
              </li>
            {{/if}}
          </ul>
        </nav>

        <!-- Tabs content -->
        <div class="tab-region">
          <!-- Category -->
          <div class="category">
            {{#if category}}
              <h3 class="category-title">{{category.title}}</h3>
              <table class="filters-table">
                {{#each category.filters}}
                  {{#compare level '===' 'parent'}}
                    <tr class="filter-row">
                      {{#if title}}
                        <td>
                          <span class="filter-title">{{title}}</span>
                        </td>
                      {{/if}}
                      <td class="parent-col"><span class="dash">-</span>
                        {{#each items}}
                          {{#if selected}}
                            <div class="parent">
                              <span class="parent-title">{{title}}</span>
                              {{#each items}}
                                {{#if selected}}
                                  <i>{{value}}</i>
                                {{/if}}
                              {{/each}}
                            </div>
                          {{/if}}
                        {{/each}}
                      </td>
                    </tr>
                  {{else}}
                    <tr class="filter-row">
                      {{#if title}}
                        <td><span class="filter-title">{{title}}</span></td>
                      {{/if}}
                      <td class="first-level">
                        {{#each items}}
                          {{#compare type '===' 'input'}}
                            {{#if selected}}
                              <div class="overlay">
                                {{#if label}}
                                  <i>{{label}}</i>:
                                {{/if}}
                                {{#if from}}от {{from}}{{/if}}
                                {{#if to}}до {{to}}{{/if}}
                              </div>
                            {{/if}}
                          {{else compare type '===' 'input-sizes'}}
                            {{#each values}}
                              {{#if t}}
                                {{#if s}}
                                  {{#if d}}
                                    <div class="size-row">{{t}}<b class="iks">&#9747;</b>{{s}}<b class="iks">&#9747;</b>{{d}}</div>
                                  {{/if}}
                                {{/if}}
                              {{/if}}

                            {{/each}}
                          {{else}}
                            {{#if selected}}
                              <span>{{value}}</span>
                            {{/if}}
                          {{/compare}}
                        {{/each}}
                      </td>
                    </tr>
                  {{/compare}}
                {{/each}}
                <tr>
                  <td>

                  </td>
                </tr>
              </table>
            {{/if}}
            <div class="message hidden"></div>
          </div>
          <!-- end of Category -->

          {{#if description}}
            <div class="description">{{description}}</div>
          {{/if}}
          {{#if price}}
            <div class="price">Цена: {{price}}</div>
          {{/if}}
        </div>
        <!-- end of Tabs content -->
      </div>
      <!-- end of content section -->
      <div class="col-sm-3">

      </div>
    </div>

  {{/if}}
</div>

