<div class="main-content new-company">
  <div class="title">
    <span class="icon ion-person-stalker"></span>
    <span class="title-text">Новая компания</span>
  </div>
  <div class="page">
    <!--  Add new company form -->
    <form id="add-company-form">

      <div class="form-group">
        <label for="companyName">Название</label>
        <input type="text" class="form-control" id="companyName" name="companyName" placeholder="Название компании">
      </div>

      <div class="form-group company-logo">
      </div>

      <div class="form-group">
        <p class="lbl">Раздел</p>
        <select class="form-control" id="category" name="category">
          <option value="">&mdash;</option>
          {{#each categories}}
            <option value="{{id}}">{{title}}</option>
          {{/each}}
        </select>
      </div>

      <div class="form-group">
        <p class="lbl">Вид деятельности</p>
        <select class="form-control" id="companyFilters" name="companyFilters">
          <option value="">&mdash;</option>
          {{#each companyFilters}}
            <option value="{{id}}">{{title}}</option>
          {{/each}}
        </select>
      </div>

      <div class="form-group">
        <label for="description">О компании</label>
        <textarea class="form-control" rows="5" id="description" name="description"></textarea>
      </div>

      <p class="lbl">Местоположение</p>
      <div class="country-picker"></div>

      <div class="form-group">
        <label for="address">Адрес</label>
        <input type="text" class="form-control" id="address" name="address">
      </div>

      <div class="form-group">
        <label for="phones">Телефоны</label>
        <input type="text" class="form-control" id="phones" name="phones">
      </div>

      <div class="form-group">
        <label for="website">Веб-сайт</label>
        <input type="text" class="form-control" id="website" name="website">
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="year">Год образования</label>
            <input type="number" class="form-control" id="year">
          </div>
        </div>
        <div class="col-md-6">
          <label for="count">Численность, чел</label>
          <input type="number" class="form-control" id="count">
        </div>
      </div>

      <br>
      <button type="submit" class="btn btn-default">Добавить</button>
      <button type="button" class="btn btn-default back">Отмена</button>
    </form>
    <!-- /end form-->
  </div>


</div>