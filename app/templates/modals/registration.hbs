<!-- Registration modal -->
<div class="modal fade" id="registration"  tabindex="-1" role="dialog" aria-labelledby="registrationModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="registrationModalLabel">Регистрация</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Email адрес">
          </div>
          <div class="form-group">
            <label for="password">Пароль</label>
            <input type="password" class="form-control" id="password" placeholder="Выберите пароль">
          </div>
          <div class="form-group">
            <label for="repassword">Пароль еще раз</label>
            <input type="password" class="form-control" id="repassword" placeholder="Подтвердите выбранный пароль">
          </div>
          <div class="form-group checkbox">
            <label>
              <input type="checkbox"> Я соглашаюсь с правилами ресурса.
            </label>
          </div>
          <button type="button" class="btn btn-default registration-submit">Зарегистрироваться</button>
        </form>
      </div>
      <div class="modal-footer">

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->